<div class="account-pages my-5 pt-sm-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="text-center mb-4">
                    <a href="/" class="auth-logo mb-5 d-block">
                        <img src="/resources/assets/images/logo-dark.png" alt="" height="30" class="logo logo-dark">
                        <img src="/resources/assets/images/logo-light.png" alt="" height="30" class="logo logo-light">
                    </a>
                    <h4>Reset Password</h4>
                    <p class="text-muted mb-4">Reset Password With {{config.app_name}}.</p>
                </div>
                <div class="card">
                    <div class="card-body p-4">
                        <div class="p-3">
                            <form id="auth-reset-password">
                                <div style="display: none" class="alert alert-danger text-center mb-4" role="alert" id="auth-reset-password-alert"></div>
                                <div class="mb-4">
                                    <label class="form-label">Create New Password</label>
                                    <div class="input-group mb-3 bg-soft-light rounded-3">
                                        <span class="input-group-text text-muted" id="basic-addon5">
                                            <i class="ri-key-line"></i>
                                        </span>
                                        <input type="hidden" name="token" value="{{token}}">
                                        <input type="text" spellcheck="false" autofocus="autofocus" name="password" class="form-control form-control-lg border-light bg-soft-light" placeholder="Create New Password" aria-label="Create New Password" aria-describedby="basic-addon5">
                                    </div>
                                </div>
                                <div class="d-grid">
                                    <button class="btn btn-primary waves-effect waves-light" type="submit">Create New Password</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="mt-5 text-center">
                    <p>Change of mind ? <a href="/signin" class="fw-medium text-primary"> Signin </a> </p>
                </div>
            </div>
        </div>
    </div>
</div>