<ul class="list-unstyled mb-0" id="holder-chat">
    {{#each chatContent.chatMessages}}
        <li class="{{#ifCond sender_user_id '==' ../user.user_id}}right{{/ifCond}}">
            <div class="conversation-list">
                <div class="chat-avatar">
                    <img src="{{sender.user_avatar}}" alt="{{sender.username}}">
                </div>
                <div class="user-chat-content">
                    <div class="ctext-wrap">
                        <div class="ctext-wrap-content">
                            {{#ifCond type "===" null}}
                                <p class="mb-0" id="textContent{{chat_messages_id}}">{{message_text}}</p>
                            {{/ifCond}}
                            {{#ifCond type.message_type "===" "file"}}
                                <div class="card p-2 mb-2">
                                    <div class="d-flex flex-wrap align-items-center attached-file">
                                        <div class="avatar-sm me-3 ms-0 attached-file-avatar">
                                            <div class="avatar-title bg-soft-primary text-primary rounded font-size-20">
                                                <i class="ri-file-text-fill"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 overflow-hidden">
                                            <div class="text-start">
                                                <h5 class="font-size-14 text-truncate mb-1">{{UpperFirst type.file_original_name}}</h5>
                                                <p class="text-muted text-truncate font-size-13 mb-0">{{ConvertBytes type.file_size}}</p>
                                            </div>
                                        </div>
                                        <div class="ms-4 me-0">
                                            <div class="d-flex gap-2 font-size-20 d-flex align-items-start">
                                                <div>
                                                    <a style="font-size: 18px;
    color: #fff;
    display: inline-block;
    line-height: 30px;
    width: 30px;
    height: 30px;
    text-align: center" download="{{type.file_original_name}}" href="/uploads/{{type.file_name}}" class="fw-medium bg-primary rounded">
                                                        <i class="ri-download-2-line"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {{/ifCond}}
                            {{#ifCond type.message_type "===" "image"}}
                                <ul class="list-inline message-img  mb-0">
                                    <li class="list-inline-item message-img-list me-2 ms-0">
                                        <div>
                                            <a class="popup-img d-inline-block m-1" href="/uploads/{{type.file_name}}" title="{{type.message_type}}">
                                                <img src="/uploads/{{type.file_name}}" alt="" class="rounded border">
                                            </a>
                                        </div>
                                        <div class="message-img-link">
                                            <ul class="list-inline mb-0">
                                                <li class="list-inline-item">
                                                    <a title="Something" download="/uploads/{{type.file_name}}" href="/uploads/{{type.file_name}}" class="fw-medium bg-primary rounded">
                                                        <i class="ri-download-2-line"></i>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </li>
                                </ul>
                            {{/ifCond}}
                            <p class="chat-time mb-0"><i class="ri-time-line align-middle"></i> <span class="align-middle">{{MomentFormat created_at}}</span></p>
                        </div>
                        <div class="dropdown align-self-start">
                            <a class="dropdown-toggle" href="javascript:void(0)" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="ri-more-2-fill"></i>
                            </a>
                            <div class="dropdown-menu">
                                {{#ifCond type "===" null}}
                                    <a class="dropdown-item" data-id="{{chat_messages_id}}" href="javascript:void(0)" onclick="copyToClipboard('#textContent{{chat_messages_id}}')">Copy <i class="ri-file-copy-line float-end text-muted"></i></a>
                                {{/ifCond}}
                                <a class="dropdown-item" data-id="{{chat_messages_id}}" href="javascript:void(0)">Forward <i class="ri-chat-forward-line float-end text-muted"></i></a>
                                {{#ifCond sender_user_id '==' ../user.user_id}}
                                    <a class="dropdown-item" data-id="{{chat_messages_id}}" href="javascript:void(0)">Delete <i class="ri-delete-bin-line float-end text-muted"></i></a>
                                {{/ifCond}}
                            </div>
                        </div>
                    </div>
                    <div class="conversation-name">
                        {{UpperFirst sender.first_name}} {{UpperFirst sender.last_name}}
                    </div>
                </div>
            </div>
        </li>
    {{/each}}
</ul>